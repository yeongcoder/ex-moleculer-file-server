{
  "name": "ucworks-backend-storage",
  "version": "1.0.0",
  "description": "My Moleculer-based microservices project",
  "scripts": {
    "build": "tsc -P ./tsconfig.json",
    "dev": "ts-node -r tsconfig-paths/register ./node_modules/moleculer/bin/moleculer-runner.js --hot --repl --env --config moleculer.config.ts services/**/*.service.ts",
    "start": "moleculer-runner --env --config dist/moleculer.config.js dist/services/**/*.service.js",
    "cli": "moleculer connect TCP",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint --ext .js,.ts .",
    "dc:up": "docker-compose up --build -d",
    "dc:logs": "docker-compose logs -f",
    "dc:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "jest": "^25.1.0",
    "jest-cli": "^25.1.0",
    "moleculer-repl": "^0.6.2",
    "ts-jest": "^25.3.0",
    "ts-node": "^8.8.1"
  },
  "dependencies": {
    "@types/jest": "^25.1.4",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mime-types": "^2.1.0",
    "@types/mkdirp": "^1.0.0",
    "@types/node": "^13.9.8",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "moleculer": "^0.14.0",
    "moleculer-decorators": "^1.3.0",
    "moleculer-web": "^0.9.0",
    "typescript": "^3.8.3",
    "yarn": "^1.22.10"
  },
  "engines": {
    "node": ">= 10.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "setupFiles": [
      "<rootDir>/test/config/env.setup.ts",
      "<rootDir>/test/config/mock.setup.ts"
    ],
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "moduleNameMapper": {
      "^@(Mixins)(.*)$": "<rootDir>/mixins/$2",
      "^@(MicroServices)(.*)$": "<rootDir>/services/$2",
      "^@(Test)(.*)$": "<rootDir>/test/$2",
      "@Entities/Connection": "<rootDir>/test/Config/Connection",
      "^@([A-Z].*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    }
  },
  "main": "index.js",
  "license": "MIT"
}
